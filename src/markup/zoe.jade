    style.
        #stage {
            width: 600px;
            height: 600px;
            float: left;
            margin-right: 20px;
            position: relative;
            border: solid 1px #efefef;
        }

        #stage span {
            text-align: center;
            margin-top: 100px;
            display: block;
            color: #fff;
        }

        #selectFrom {
            float: left;
            text-align: center;
            width: 114px;
        }

        .carrotCellView {
            height: 535px;
            margin-top: 5px;
            border: solid 1px #efefef;
        }

        #selectFrom .prev, #selectFrom .next {
            display: block;
            background: #efefef;
            margin: 5px 0;
            padding: 5px;
            font-family: arial;
            text-transform: uppercase;
            font-size: 12px;
            color: #000;
            cursor: pointer;
        }

        #selectFrom li {
            display: block;
            width: 100px;
            height: 145px;
            border: solid 1px #efefef;
            margin: 5px;
        }

        #selectFrom li img {
            width: 100px;
        }

        .ui-draggable {
            cursor: pointer;
        }

        #stage .stageItem.over {
          background: url(/images/tile_transparent.png) repeat 0 0;
        }

        #stage .stageItem {
          position: absolute;
          top: 0;
          left: 0;
          width: 150px;
          height: 225px;
          cursor: pointer;
          z-index: 50;
            border: dotted 1px transparent;
        }

        #stage .stageItem.over {
            border: dotted 1px #efefef;
        }

        #stage .stageItem img {
          display: block;
          overflow: hidden;
          position: relative;
          width: 100%;
        height: 100%;
        }

        #stage .stageItem .ui-resizable-handle {
          display: block;
          overflow: hidden;
          position: relative;
          text-indent: -9999em;
          background-image: url(img/zoe/icon_sprite.png);
          height: 16px;
          width: 16px;
          background-repeat: no-repeat;
          position: absolute;
          bottom: 0;
          right: 0;
          cursor: se-resize;
          z-index: 100;
          opacity: 0;
        }

        #stage .stageItem .ui-resizable-e {
          background: none;
          cursor: e-resize;
          height: 100%;
          right: -5px;
          top: 0;
          width: 7px;
        }

        #stage .stageItem .resizeTools {
          display: block;
          overflow: hidden;
          position: relative;
          position: absolute;
          top: 5px;
          left: 5px;
          width: 95%;
          opacity: 0;
          z-index: 100;
        }

        #stage .stageItem .resizeTools li {
          display: block;
          overflow: hidden;
          position: relative;
          text-indent: -9999em;
          width: 13px;
          height: 13px;
          margin-right: 7px;
          float: left;
          background-image: url(img/zoe/icon_sprite.png);
        }

        #stage .stageItem .resizeTools .close {
          background-position: -56px 0px;
        }

        #stage .stageItem .resizeTools .forward {
          background-position: 0px -47px;
          float: right;
        }

        #stage .stageItem .resizeTools .back {
          background-position: -15px -47px;
          float: right;
        }

        .tooltip, #tooltip {
          position: absolute;
          z-index: 3000;
          border: 1px solid #111;
          background-color: #eee;
          padding: 5px;
          opacity: 0.85;
          font-size: 10px;
          font-family: arial;
          font-weight: normal;
        }


        #tooltip, #tooltip h3, #tooltip .url {
          font-size: 10px;
          font-family: arial;
          font-weight: normal;
        }


        #tooltip h3, #tooltip div {
          margin: 0;
        }


